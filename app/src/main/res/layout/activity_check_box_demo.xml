<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".CheckBoxDemoActivity">

    <CheckBox
        android:id="@+id/cbTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:checked="true"
        android:text="Using for multiple choices"
        android:textSize="25dp" />

    <CheckBox
        android:id="@+id/cbChoice1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Choice no.1"
        android:textSize="20dp" />

    <CheckBox
        android:id="@+id/cbChoice2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Choice no.2"
        android:textSize="20dp" />

    <CheckBox
        android:id="@+id/cbChoice3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Choice no.3"
        android:textSize="20dp" />

    <CheckBox
        android:id="@+id/cbChoice4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Choice no.4"
        android:textSize="20dp" />

    <CheckBox
        android:id="@+id/cbChoice5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Choice no.5"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Result"
        android:textSize="20dp" />



</LinearLayout>